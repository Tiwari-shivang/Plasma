<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HowFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/howCard"
        app:cardCornerRadius="10dp"
        android:layout_margin="15dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="#DFF3FB"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:text="How ?"
                android:textSize="20sp"
                android:textStyle="bold"
                android:id="@+id/howCardText"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/how_can_donate"
                android:layout_below="@id/howCardText"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:id="@+id/howCanDonateImg"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_forward_light"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_back_light"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Learn more about plasma donor experience"
                android:layout_below="@id/howCanDonateImg"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:id="@+id/howCanDonateID"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Read More"
                android:layout_below="@id/howCanDonateID"
                android:layout_centerHorizontal="true"
                android:id="@+id/ReadMoreHow"
                android:layout_marginBottom="5dp"
                android:layout_alignParentBottom="true"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>